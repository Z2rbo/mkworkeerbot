{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.bot"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "python -m backend.bot.telegram_bot",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
